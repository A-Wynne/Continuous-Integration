<%- include('layouts/header'); -%>
    <header>
        <h1>Conestoga Garage Sale</h1>
        <h2>Raising money for The Frontline Fund</h2>
    </header>
    <body>
        <%- include('layouts/nav'); -%>
        <form name="myForm" id="myForm" method="POST" onsubmit="return formSubmit();">
            <label>Name</label>
            <input id="name" placeholder="First Last" type="text" name="name"><br />
            <label>Street Address</label>
            <input id="address" placeholder="66 lang cres" type="text" name="address"><br />
            <label>Postal Code</label>
            <input id="postalcode" placeholder="l5w1d8" type="text" name="postalcode"><br />
            <label>Province</label>
            <input id="province" placeholder="e.g Ontario" type="text" name="province"><br />
            <label>Country</label>
            <input id="country" placeholder="e.g Canada" type="text" name="country"><br />

            <h3>Buy generously</h3>

            <label>Water Bottles ($5)</label>
            <input id="water" placeholder="xx" type="text" name="water"><br />

            <label>Chips ($4)</label>
            <input id="chips" placeholder="xx" type="text" name="chips"><br />
            <br /><br />

            <input type="submit" value="Checkout">
            <% if(typeof(errors) !='undefined' ){ for(var error of errors){ %>
                <p class="errors">
                    <%= error.msg%>
                </p>
                <% } } %>
        </form>
        <!---->
        <div class="formData">
            <% if(typeof(errorMessage) !='undefined' ){ %>
                <h1>
                    <%= errorMessage %>
                </h1>
                <% } %>
                    <% if(typeof(salesTotal) !='undefined' ){ %>
                        <h3>Thank you for your purchase!</h3>

                        <table>
                            <tr>
                                <th>Name</th>
                                <td>
                                    <%= name %>
                                </td>
                            </tr>
                            <tr>
                                <th>Street Address</th>
                                <td>
                                    <%= address %>
                                </td>
                            </tr>
                            <tr>
                                <th>Postal Code</th>
                                <td>
                                    <%= pcode %>
                                </td>
                            </tr>
                            <tr>
                                <th>Province</th>
                                <td>
                                    <%= province %>
                                </td>
                            </tr>
                            <tr>
                                <th>Country</th>
                                <td>
                                    <%= country %>
                                </td>
                            </tr>
                            </tr>
                        </table>
                        <table class="receipt">
                            <tr>
                                <th>Item</th>
                                <th>Quantity</th>
                                <th>Unit Price</th>
                                <th>Total Price</th>
                            </tr>
                            <tr>
                                <td>Water Bottle</td>
                                <td>
                                    <%= waterQuantity %>
                                </td>
                                <td>$5</td>
                                <td>
                                    <%= waterTotal %>
                                </td>
                            </tr>
                            <tr>
                                <td>Chips</td>
                                <td>
                                    <%= chipsQuantity %>
                                </td>
                                <td>$4</td>
                                <td>
                                    <%= chipsTotal %>
                                </td>
                            </tr>
                            <tr>
                                <td>Tax</td>
                                <td colspan="2">
                                    <%= taxPercent %>
                                </td>
                                <td>
                                    <%= subTotal %>
                                </td>
                            </tr>
                            <tr>
                                <th colspan="3">Total</th>
                                <th>
                                    <%= salesTotal %>
                                </th>
                            </tr>
                        </table>
                        <% } %>
        </div>
    </body>
    <%- include('layouts/footer'); -%>